{
  "manifest_version": 3,
  "name": "Homary Test Switcher",
  "version": "1.0",
  "description": "Homary Test Switcher",
  "permissions": ["storage", "declarativeNetRequest", "declarativeNetRequestWithHostAccess", "activeTab", "scripting"],
  "host_permissions": ["*://*.testhomary.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.testhomary.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}